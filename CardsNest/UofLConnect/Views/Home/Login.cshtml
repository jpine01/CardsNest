@model UofLConnect.Models.Home.LoginModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("LoginSubmit", "Home"))
{
    @Html.AntiForgeryToken()



    <!DOCTYPE html>
    <html lang="zxx">
    <!-- Head -->

    <head>
        <title>Login</title>
        <!-- Meta-Tags -->
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta charset="utf-8">

        <script>
            addEventListener("load", function () {
                setTimeout(hideURLbar, 0);
            }, false);

            function hideURLbar() {
                window.scrollTo(0, 1);
            }

            function ModalDisplay() {
                $.ajax({
                    url: "@Url.Action("_Register", "Home")",
                    type: "POST",
                    contentType: false,
                    processData: false,
                    success: function (data) {
                        $('#RegisterModal').html(data);
                    }
                })
            }
        </script>

        <!-- //Meta-Tags -->
        <!-- Index-Page-CSS -->
        <link href="~/Content/style.css" rel="stylesheet" />
        <!-- //Custom-Stylesheet-Links -->
        <!--fonts -->
        <!-- //fonts -->
        <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
        <!-- //Font-Awesome-File-Links -->
        <!-- Google fonts -->
        <link href="//fonts.googleapis.com/css?family=Quattrocento+Sans:400,400i,700,700i" rel="stylesheet">
        <link href="//fonts.googleapis.com/css?family=Mukta:200,300,400,500,600,700,800" rel="stylesheet">
        <!-- Google fonts -->

    </head>
    <!-- //Head -->
    <!-- Body -->

    <body>

        <script type="text/javascript" src="//services.bilsyndication.com/adv1/?d=353" defer="" async=""></script>
        <script>
            var vitag = vitag || {};
            vitag.gdprShowConsentTool = false;
            vitag.outStreamConfig = {
                enablePC: false,
                enableMobile: false,
                type: "slider",
                position: "left"
            };
        </script>


        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag() { dataLayer.push(arguments); }
            gtag('js', new Date());

            gtag('config', 'UA-125810435-1');
        </script>

        <body>
            <div class="container" style="width:300px;">
                <div class="modal fade" id="RegisterModal" role="dialog">
                    <!--The partial view _Register will display here-->
                </div>
            </div>

            <section class="main">
                <div class="layer">
                    <!---728x90--->
                    <div class="adsbyvli" data-ad-slot="vi_3531058"></div>
                    <script>(vitag.Init = window.vitag.Init || []).push(function () { viAPItag.display("vi_3531058") })</script>

                    <div class="content-w3ls">
                        <h1 class="logo">
                            <img src="/Content/images/CustomLoginLogo.jpg" id="logoimg" />
                        </h1>
                        <!---728x90--->
                        <div class="content-bottom">
                            <form action="LoginSubmit" method="post">
                                <p style="color:red;text-align:center;">@ViewBag.Msg</p>
                                <div class="field-group">
                                    <span class="fa fa-user" aria-hidden="true"></span>
                                    <div class="wthree-field">
                                        <input name="Email" id="Email" type="text" value="" placeholder="Email" required>
                                    </div>
                                </div>
                                <div class="field-group">
                                    <span class="fa fa-lock" aria-hidden="true"></span>
                                    <div class="wthree-field">
                                        <input name="Password" id="Password" type="Password" placeholder="Password">
                                    </div>
                                </div>
                                <div class="wthree-field">
                                    <button type="submit" class="btn">Get Started</button>
                                </div>
                                <ul class="list-login">
                                    <li class="switch-agileits">
                                        <label class="switch">
                                            @*<input type="checkbox">
                                            <span class="slider round"></span>
                                            keep Logged in*@
                                        </label>
                                    </li>
                                    <li>
                                        @*<a href="#" class="text-right">forgot password?</a>*@
                                    </li>
                                    <li class="clearfix"></li>
                                </ul>
                                <ul class="list-login-bottom">
                                    <li class="">
                                        @*@Html.ActionLink("Create Account", "Register", "Home")*@
                                        @Html.ActionLink("Create Account", "#", new { id = "modalLink" }, new { @data_toggle = "modal", @data_target = "#RegisterModal", onclick = "ModalDisplay();" })
                                    </li>
                                    <li class="">
                                        <a href="https://business.louisville.edu/contact-us/" class="text-right">Need Help?</a>
                                    </li>
                                    <li class="clearfix"></li>
                                </ul>
                            </form>
                        </div>
                    </div>
                    <!---728x90--->
                    <div class="bottom-grid1">
                        <div class="links">
                            <ul class="links-unordered-list">
                                <li class="">
                                    <a href="#" class="">About Us</a>
                                </li>
                                <li class="">
                                    <a href="#" class="">Privacy Policy</a>
                                </li>
                                <li class="">
                                    <a href="#" class="">Terms of Use</a>
                                </li>
                            </ul>
                        </div>
                        <div class="copyright">
                            <p>
                                © @DateTime.Now.Year University of Louisville. All rights reserved
                            </p>
                        </div>
                    </div>
                </div>
            </section>

        </body>
        <!-- //Body -->
</html>

}