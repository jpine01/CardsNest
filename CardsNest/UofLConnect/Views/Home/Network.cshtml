@model IList<UofLConnect.Models.Mentor.MentorInfo>


@{
    ViewBag.Title = "Network";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .avatar{
        display: inline-block;
        width: 35px;
        height: 35px;
        border-radius: 50%;
    }

    #avatarImg{
        width: 100%;
        height: auto;
    }
</style>


<div align="center">
    <h2><b>Top Matches</b></h2>
    <br />
    <br />
</div>

<div class="grid">

    <!-- Add icon library -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    @{
        int count = 0;
        foreach (var mentor in Model)
        {
            count++;
            if (count < 6 && ViewBag.myID != int.Parse(mentor.UserID))
            {
                <div class="card">
                    <p><strong>@mentor.MatchPercentage</strong></p>
                    <div class="avatar">
                        <img src="@Url.Content("~/Content/images/no_avatar.png")" id="avatarImg">
                    </div>
                    <h1>@mentor.FName @mentor.LName</h1>
                    <p class="title">@mentor.Job</p>
                    <p>@mentor.Industry</p>

                    <p><button onclick="getMentorInfo(@count)" class="cardbutton">View Profile</button></p>
                </div>
            }
        }
    }

</div>

<br />
<div align="center">
    <h3>Matches</h3>
    <br />
    <br />
</div>

<div class="grid">

    @{
        count = 0;
        foreach (var mentor in Model)
        {
            count++;
            if (count >= 6)
            {
                <div class="card">
                        <p><strong>@mentor.MatchPercentage</strong></p>
                    <div class="avatar">
                        <img src="@Url.Content("~/Content/images/no_avatar.png")" id="avatarImg">
                    </div>
                    <h1>@mentor.FName @mentor.LName</h1>
                    <p class="title">@mentor.Job</p>
                    <p>@mentor.Industry</p>

                    <p><button onclick="getMentorInfo(@count)" class="cardbutton">View Profile</button></p>
                </div>
            }
        }
    }
</div>




<style>
    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        max-width: 300px;
        margin: auto;
        text-align: center;
    }

    .title {
        color: grey;
        font-size: 18px;
    }

    .cardbutton {
        border: none;
        outline: 0;
        display: inline-block;
        padding: 8px;
        color: white;
        background-color: #000;
        text-align: center;
        cursor: pointer;
        width: 100%;
        font-size: 18px;
    }

    .a {
        text-decoration: none;
        font-size: 22px;
        color: black;
    }

    button:hover, a:hover {
        opacity: 0.7;
    }

    .grid {
        /* Grid Fallback */
        display: flex;
        flex-wrap: wrap;
        /* Supports Grid */
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        grid-auto-rows: minmax(150px, auto);
        grid-gap: 1em;
    }

    .module {
        /* Demo-Specific Styles */
        background: #eaeaea;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 200px;
        /* Flex Fallback */
        margin-left: 5px;
        margin-right: 5px;
        flex: 1 1 200px;
    }
</style>


@section Scripts {

    <script type="text/javascript">


        function getMentorInfo(count) {

            console.log(count);

            postMentorInfo(count);

        //    location.href = ('/Home/ViewProfile');

           

        }

        function postMentorInfo(count) {

           $.ajax({
               type: "POST",
               url: '@Url.Action("postMentorInfo", "Home")',
               traditional: true,
               data: {
                   'mentorIndex': count,
               },
               success: function (msg) {
                   console.log("PostMentofInfo Executed Successfully")
                   location.href = ('/Home/ViewProfile');
               },
               error: function (req, status, error) {
                   console.log(error)
               }
           })
       }


    </script>
}