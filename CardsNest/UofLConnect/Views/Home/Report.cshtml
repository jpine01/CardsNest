@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model UofLConnect.Models.Home.ReportModel

<style>
    .alert-info {
        color: red;
        width: 20%;
    }

    .alert-info p {
        text-align: center;
    }
</style>


<!DOCTYPE html>
    <html>
    <head>
    <meta name="viewport" content="width=device-width" />
    <title> Index </title>
    </head>
<body>
    @using (Html.BeginForm("ReportSubmit", "Home"))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h3> Report </h3> 
            <hr />
            @Html.ValidationSummary(true, "", new
            {
                @class = "text-danger"
            })

            <div class="alert-info">
                <p>@ViewBag.message</p>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Report_Name, "Report Type:", htmlAttributes: new { @class = "control-label col-md-2"})
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Report_Name, Model.Report_List, "Select Offense", htmlAttributes: new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(model => model.Report_Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.User_Name, "Contact Email:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.User_Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Optional" } })
                    @Html.ValidationMessageFor(model => model.User_Name, "", new { @class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Report_Message, "Message", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Report_Message,  new { @class = "form-control", @cols = 100, @rows = 10, @minwidth = "", required = "required" })
                    @Html.ValidationMessageFor(model => model.Report_Message, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }

</body>
</html>