@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@model UofLConnect.Models.Admin.EmailBlastModel

<style>
    .alert-info {
        color: red;
        width: 20%;
    }

    .alert-info p {
        text-align: center;
    }
</style>


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title> Index </title>
</head>
<body>
    @using (Html.BeginForm("EmailBlastSubmit", "Admin"))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h3> Send Email Blast </h3>
            <hr />
            @Html.ValidationSummary(true, "", new
            {
                @class = "text-danger"
            })

            <div class="alert-info">
                <p>@ViewBag.Msg</p>
            </div>

            <div class="col-md-6">
                <div class="form-group col-md-4">
                    <div class="col-md-4">
                        @Html.CheckBoxFor(model => model.Mentor, new { id = "mentorRadio" })
                        @Html.ValidationMessageFor(model => model.Mentor, "", new { @class = "text-danger" })
                    </div>
                    @Html.LabelFor(model => model.Mentor, "Mentor", htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
                <div class="form-group col-md-4">
                    <div class="col-md-4">
                        @Html.CheckBoxFor(model => model.Mentee, new { id = "menteeRadio", @checked = "checked" })
                        @Html.ValidationMessageFor(model => model.Mentee, "", new { @class = "text-danger" })
                    </div>
                    @Html.LabelFor(model => model.Mentee, "Mentee", htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
                <div class="form-group col-md-4">
                    <div class="col-md-4">
                        @Html.CheckBoxFor(model => model.Alumni, new { id = "alumnRadio" })
                        @Html.ValidationMessageFor(model => model.Alumni, "", new { @class = "text-danger" })
                    </div>
                    @Html.LabelFor(model => model.Alumni, "Alumni", htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
            </div>
            <br />
            <br />
            <br />
            <br />
            <div class="form-group col-md-12">
                @Html.LabelFor(model => model.EmailSubject, "Subject:*", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.EmailSubject, new { htmlAttributes = new { @class = "form-control", maxlength = "50" } })
                    @Html.ValidationMessageFor(model => model.EmailSubject, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group col-md-12">
                @Html.LabelFor(model => model.EmailContent, "Message:*", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.EmailContent, new { @class = "form-control", @rows = 10, @maxwidth = "80%", @width = "80%", required = "required" })
                    @Html.ValidationMessageFor(model => model.EmailContent, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }

</body>
</html>